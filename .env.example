# Path to the input PDB file (relative to the project root)
INPUT_FILE=data/input/1bey.pdb

# Directory where the PDB file chunks will be stored
TEMP_CHUNKS_DIR=data/temp_chunks

# Directory where the extracted output JSON file will be stored
OUTPUT_DIR=data/output/extracted

# Directory where the ML inference JSON files will be stored
INFERENCE_OUTPUT_DIR=data/output/inferenced

# Path to the JSON mapping file for amino acid codes
MAPPING_FILE=data/amino_acids_mapping.json

# Comma-separated list of chain identifiers to process (e.g., H,L)
ACCEPTED_CHAINS=H,L

# Maximum number of workers for parallel processing
MAX_WORKERS=4

# Maximum number of retries for failed tasks
MAX_RETRIES=3

# Whether to deduplicate adjacent residues (True/False)
DEDUPLICATE=True
